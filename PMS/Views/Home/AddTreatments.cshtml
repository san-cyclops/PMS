@model PMS.Models.SessionKey
@inject IJsonHelper Json;
<script type="text/javascript">
    var SessionKey = @Html.Raw(@Json.Serialize(Model));
</script>
@{
    ViewData["Title"] = "Doctor Signup";
}
<div ng-app="APIModule">
    <div ng-controller="APIController  as main">
        <div id="wrapper">
            <!--BEGIN SIDEBAR MENU-->

            @Html.Partial("_MainMenu")

            <div id="page-wrapper">
                <!--BEGIN TITLE & BREADCRUMB PAGE-->
                <!--SUB TITLE -- SANJEEWA-->
                <!--END TITLE & BREADCRUMB PAGE-->
                <!--BEGIN CONTENT-->
                <div class="page-content">
                    <div id="tab-general">
                        <div class="row mbl">
                            <div class="col-lg-12">


                                <div class="panel panel-orange">
                                    <div class="panel-heading">
                                        Add Treatments
                                    </div>
                                    <div class="panel-body pan">
                                        <form>
                                            <div class="form-body pal">
                                                <div class="form-group" hidden>
                                                    <label for="inputName" class="control-label">
                                                        ID
                                                    </label>
                                                    <div class="input-icon right">
                                                        <input id="inputName" ng-model="main.Doctor.doctorID" type="text" class="form-control" />
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                Patient
                                                            </label>
                                                            <div class="input-icon right">
                                                                <select class="form-control" name="Status" id="Status" required ng-model="main.Doctor.Patient">
                                                                    <option value="Patient1">Patient1</option>
                                                                    <option value="Patient2">Patient2</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                Appoinment
                                                            </label>
                                                            <div class="input-icon right">
                                                                <select class="form-control" name="Status" id="Status" required ng-model="main.Doctor.Appoinment">
                                                                    <option value="Patient1">Patient1</option>
                                                                    <option value="Patient2">Patient2</option>
                                                                </select>
                                                            </div>
                                                        </div> 
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                Medicine
                                                            </label>
                                                            <div class="input-icon right">
                                                                <select class="form-control" name="Status" id="Status" required ng-model="main.Doctor.Medicine">
                                                                    <option value="Acetaminophen">Acetaminophen</option>
                                                                    <option value="Paracetamol ">Paracetamol </option>
                                                                    <option value="Amoxicillin ">Amoxicillin </option>
                                                                    <option value="Ativan ">Ativan </option>
                                                                    <option value="Hydralazine ">Hydralazine </option>
                                                                    <option value="Demerol ">Demerol </option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                Strength
                                                            </label>
                                                            <div class="input-icon right">
                                                                <input id="inputEmail" ng-model="main.Doctor.Strength" required type="number" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                Form
                                                            </label>
                                                            <div class="input-icon right">
                                                                <input id="inputEmail" ng-model="main.Doctor.Form" type="number" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                Route
                                                            </label>
                                                            <div class="input-icon right">
                                                                <input id="inputEmail" ng-model="main.Doctor.Route" type="number" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                Quantity
                                                            </label>
                                                            <div class="input-icon right">
                                                                <input id="inputEmail" ng-model="main.Doctor.Quantity" required type="number" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                Dosage
                                                            </label>
                                                            <div class="input-icon right">
                                                                <input id="inputEmail" ng-model="main.Doctor.Dosage" type="text" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                Frequency
                                                            </label>
                                                            <div class="input-icon right">
                                                                <input id="inputEmail" ng-model="main.Doctor.Frequency" type="text" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                StartDate
                                                            </label>
                                                            <div class="input-icon right">
                                                                <input id="inputEmail" ng-model="main.Doctor.StartDate" type="date" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                EndDate
                                                            </label>
                                                            <div class="input-icon right">
                                                                <input id="inputEmail" ng-model="main.Doctor.EndDate" type="date" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                Instructions
                                                            </label>
                                                            <div class="input-icon right">
                                                                <input id="inputEmail" ng-model="main.Doctor.Instructions" type="text" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                InstructionsNotes
                                                            </label>
                                                            <div class="input-icon right">
                                                                <input id="inputEmail" ng-model="main.Doctor.InstructionsNotes" type="text" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="inputName" class="control-label">
                                                                Status
                                                            </label>
                                                            <div class="input-icon right">
                                                                <input id="inputEmail" ng-model="main.Doctor.Status" type="text" class="form-control" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-actions text-right pal">
                                                    <button ng-click="main.addClickHandler()" class="btn btn-primary">
                                                        Save
                                                    </button>
                                                    <button ng-click="main.resetClickHandler()" class="btn btn-primary">
                                                        Clear Form
                                                    </button>
                                                </div>

                                                <div class="panel-body">
                                                    <label>Search:</label>
                                                    <input type="text" ng-model="main.search" />
                                                    <table class="table table-hover table-condensed" ng-show="main.addresses">
                                                        <thead>
                                                            <tr>
                                                                <th hidden>#</th>
                                                                <th>Form</th>
                                                                <th>Route</th>
                                                                <th>Quantity</th>
                                                                <th>Dosage</th>
                                                                <th>Frequency</th>
                                                                <th>StartDate</th>
                                                                <th>EndDate</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr ng-repeat="item in main.addresses |filter:main.search ">
                                                                <td hidden ng-bind="item.ID "></td>
                                                                <td ng-bind="item.Form"></td>
                                                                <td ng-bind="item.Route "></td>
                                                                <td ng-bind="item.Quantity "></td>
                                                                <td ng-bind="item.Dosage "></td>
                                                                <td ng-bind="item.Frequency"></td>
                                                                <td ng-bind="item.StartDate | date: 'MM-dd-yyyy'  "></td>
                                                                <td ng-bind="item.EndDate | date: 'MM-dd-yyyy'"></td>
                                                                <td>
                                                                    <button class="btn btn-primary" ng-click="main.editClickHandler(item)">Edit</button>
                                                                    <button class="btn btn-danger" ng-click="main.removeClickHandler(item)">Remove</button>
                                                                </td>
                                                            </tr>


                                                        </tbody>
                                                    </table>
                                                </div>

                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <!--END CONTENT-->
                <!--BEGIN FOOTER-->
                <div id="footer">
                    <div class="copyright">
                        
                    </div>
                </div>
                <!--END FOOTER-->
            </div>

        </div>
    </div>
</div>
<script src="~/js/angular.js"></script>
<script src="~/js/app_Treatments.js"></script>





