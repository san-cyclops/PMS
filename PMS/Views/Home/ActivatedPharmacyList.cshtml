@model PMS.Models.SessionKey
@{
    ViewData["Title"] = "ActivatedDocList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    var SessionKey = @Html.Raw(@Json.Serialize(Model));
</script>



<!-- basic styles -->



<link rel="stylesheet" href="~/css/style.css" />
 
<div class="panel panel-green">
    <div class="panel-heading">Pharmacists Requested Sytem Approval</div>
    <div class="panel-body">
        <label>Search:</label>
        <input type="text" ng-model="search" />
        <table class="table table-hover table-bordered" ng-show="approvelPharmac">
            <thead>
                <tr>
                    <th>Pharmacy ID</th>
                    <th>Owner Name</th>
                    <th>Reg No</th>
                    <th>Telephone Number</th>
                    <th>Approve</th>
                    <th>View Full Details</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in approvelPharmac |filter:search ">
                    <td ng-bind="item.PharmacyID "></td>
                    <td ng-bind="item.Pharmacyname"></td>
                    <td ng-bind="item.PharmacyRegNo"></td>
                    <td ng-bind="item.TelephoneNumber"></td>
                    <td> <button type="button" class="btn btn-primary">Approve</button></td>
                    <td> <button type="button" class="btn btn-warning">View</button></td>
                </tr>
            </tbody>
        </table>

    </div>
</div>




<script src="~/js/protractor.js"></script>
<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/2.3.2/js/bootstrap.min.js"></script>
<script src="https://code.angularjs.org/1.5.8/angular.js"></script>